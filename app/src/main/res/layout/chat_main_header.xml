<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_UnContextualMode"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5dp"
    android:background="@android:color/transparent"
    android:layoutDirection="ltr"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/sdsd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:gravity="center"
        android:padding="@dimen/size_5dp">

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_vertical">
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_back"
                android:layout_width="@dimen/size_16dp"
                android:layout_height="@dimen/size_16dp"
                android:src="@drawable/left_arrow"/>

            <TextView
                android:id="@+id/tvTitle"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/size_0dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/size_0dp" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/metme_name_logo"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right">

            <ImageView
                android:id="@+id/search_icon"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_icon"
                android:padding="@dimen/_5sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp" />

            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:padding="@dimen/_5sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp" />


        </LinearLayout>



    </LinearLayout>



    <RelativeLayout
        android:id="@+id/ll_ContextualMode"
        android:layout_width="match_parent"
        android:layout_below="@+id/sdsd"
        android:layout_height="@dimen/_50sdp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_back_long"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_back_arrow" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">


            <ImageView
                android:id="@+id/iv_ContextualMode_pintype"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_vector_pin" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_path_icon_delete" />

            <ImageView
                android:id="@+id/iv_ContextualMode_mutetype"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_volume_off" />

            <ImageView
                android:id="@+id/iv_menuchat_option"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_group_on_option" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>